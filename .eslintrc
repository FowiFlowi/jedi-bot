{
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": "airbnb-base",
  "parserOptions": { "ecmaVersion": 2018 },
  "rules": {
    "semi": ["error", "never"],
    "arrow-parens": ["error", "as-needed"],
    "no-return-assign": 0,
    "no-confusing-arrow": 0,
    "prefer-template": 0,
    "comma-dangle": ["error", "always-multiline"]
  }
}
